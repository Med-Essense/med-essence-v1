<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#A2FFBBC7" />
            <corners android:radius="10dp" />
        </shape>
    </item>
    <item android:bottom="1dp" android:top="3dp" android:left="3dp" android:right="3dp" >
        <shape android:shape="rectangle">
            <stroke
                android:width="1dp"
                android:color="#FDAAB8" />
            <solid android:color="#FFFFFF" />
            <corners android:radius="10dp" />

        </shape>
    </item>
</layer-list>
